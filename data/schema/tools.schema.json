{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BestMuscat Tools",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "slug", "name", "categories", "tagline"],
    "properties": {
      "id": { "type": "string" },
      "slug": { "type": "string", "pattern": "^[a-z0-9-]+$" },
      "name": { "type": "string" },
      "categories": {
        "type": "array",
        "minItems": 1,
        "maxItems": 1,
        "items": { "type": "string" }
      },
      "tagline": { "type": "string" },
      "tags": { "type": "array", "items": { "type": "string" } },
      "logo": { "type": "string" },
      "location": {
        "type": "object",
        "properties": {
          "neighborhood": { "type": "string" },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "country": { "type": "string" },
          "lat": { "type": "number" },
          "lng": { "type": "number" },
          "phone": { "type": "string" },
          "website": { "type": "string" },
          "map_embed": { "type": "string" }
        },
        "additionalProperties": false
      },
      "hours": {
        "oneOf": [
          {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["days", "open", "close"],
              "properties": {
                "days": { "type": "string" },
                "open": { "type": "string" },
                "close": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          { "type": "null" }
        ]
      },
      "url": { "type": "string" }
    },
    "additionalProperties": true
  }
}
